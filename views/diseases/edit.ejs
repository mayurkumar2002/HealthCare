<link rel="icon" href="https://cdn-icons-png.flaticon.com/512/2966/2966327.png">
<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Disease</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/diseases/<%= disease._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Disease Name</label>
                    <input class="form-control" type="text" name="name" placeholder="Disease name" id="name"
                        value="<%= disease.name %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="doctor_name">Doctor name</label>
                    <input class="form-control" type="text" name="doctor_name" placeholder="Doctor name"
                        id="doctor_name" value="<%= disease.doctor_name %>" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Edit Disease</button>
                </div>
            </form>
            <a class="btn btn-success" href="/diseases/<%= disease._id %>">Cancel</a>
        </div>
    </div>